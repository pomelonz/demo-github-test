{% extends "./index.twig" %}
{% block main %}
	<div class="container">
		<div class="row">
			<div class="col span-12">
				<h1 class="test-heading">Flexbox grid</h1>
			</div>
		</div>

		<div class="row">
			{% for i in 1..7 %}
			<div class="col sm">
				<div class="test-col">Equal md no.{{i}}</div>
			</div>              
			{% endfor %}
		</div>
		<div class="row">
			{% for i in 1..14 %}
			<div class="col sm">
				<div class="test-col">{{i}}</div>
			</div>              
			{% endfor %}
		</div>
		<div class="row">
			{% for i in 1..7 %}
				{% if i == 4 %}
				<div class="col sm-5">
					<div class="test-col">sm 5 no.{{i}}</div>
				</div>                      
				{% else %}
				<div class="col sm">
					<div class="test-col">{{i}}</div>
				</div>      
				{% endif %}
			{% endfor %}
		</div>      
	</div>

{% endblock %}
